<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Callback Example</title>
</head>
<body>

    <script>
        // Step 1: Define the callback function
        function displayMessage(name) {
            console.log(`Hello, ${name}!`);
        }

        // Step 2: Function simulating user input using callback
        function getUserInput(callback) {
            setTimeout(() => {
                let username = "Alice"; // Fetched username
                callback(username); // Calling the callback function
            }, 1000);
        }

        // Calling the function with displayMessage as callback
        getUserInput(displayMessage);
    </script>

</body>
</html>
