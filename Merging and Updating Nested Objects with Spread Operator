<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Merge Nested Objects</title>
</head>
<body>
  <h1>Merged Profile</h1>
  <pre id="mergedProfile"></pre>

  <script>
    const profile = {
      name: "Charlie",
      age: 29,
      address: {
        city: "San Francisco",
        zipcode: "94101"
      }
    };

    const updates = {
      age: 30,
      address: {
        zipcode: "94109",
        country: "USA"
      }
    };

    // Merge nested objects using spread operator
    const mergedProfile = {
      ...profile,
      ...updates,
      address: {
        ...profile.address,
        ...updates.address
      }
    };

    // Display merged object in HTML
    const pre = document.getElementById("mergedProfile");
    pre.textContent = JSON.stringify(mergedProfile, null, 2);
  </script>
</body>
</html>
