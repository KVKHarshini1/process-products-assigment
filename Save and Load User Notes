<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Save and Load Notes</title>
</head>
<body>

    <h2>User Notes App</h2>

    <!-- Textarea to type notes -->
    <textarea id="notesArea" rows="10" cols="40" placeholder="Write your notes here..."></textarea>
    <br><br>

    <!-- Buttons for Save, Load, Clear -->
    <button id="saveBtn">Save Notes</button>
    <button id="loadBtn">Load Notes</button>
    <button id="clearBtn">Clear Notes</button>

    <script>
        const notesArea = document.getElementById("notesArea");

        // On page load: Check if notes exist in localStorage
        window.addEventListener("load", function () {
            const savedNotes = localStorage.getItem("userNotes");

            if (savedNotes) {
                notesArea.value = savedNotes; // Display saved notes
            }
        });

        // Save Notes Button Click Event
        document.getElementById("saveBtn").addEventListener("click", function () {
            // Validation: Don't save empty notes
            if (notesArea.value.trim() === "") {
                alert("Please enter some text before saving!");
                return;
            }

            // Save notes to localStorage
            localStorage.setItem("userNotes", notesArea.value);
            alert("Notes saved successfully!");
        });

        // Load Notes Button Click Event
        document.getElementById("loadBtn").addEventListener("click", function () {
            const savedNotes = localStorage.getItem("userNotes");

            if (savedNotes) {
                notesArea.value = savedNotes;
                alert("Notes loaded!");
            } else {
                alert("No saved notes found!");
            }
        });

        // Clear Notes Button Click Event
        document.getElementById("clearBtn").addEventListener("click", function () {
            localStorage.removeItem("userNotes"); // Remove notes from storage
            notesArea.value = ""; // Clear textarea
            alert("Notes cleared successfully!");
        });

    </script>

</body>
</html>
